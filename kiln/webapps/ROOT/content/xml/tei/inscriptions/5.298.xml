               <lb n="1"/><persName type="attested" ref="#person375"><name nymRef="Εὐτυχιανός">Εὐ<lb n="2" break="no"/>τυ<lb n="3" break="no"/>χια<lb n="4" break="no"/>νοῦ</name></persName>.
            </ab>
