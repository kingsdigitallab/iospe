                        <layout>
                          <seg xml:lang="ru">Лицевой фас.</seg>
                          <seg xml:lang="en"><rs type="execution" ref="execution.xml#scalpro"/> On the front of the base.</seg>
                           <dimensions>
                              <height unit="cm">50,0</height>
                              <width unit="cm">38,0</width>
                              <depth unit="cm">8,0</depth>
                           </dimensions>
