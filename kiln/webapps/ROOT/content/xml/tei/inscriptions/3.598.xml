            <ab>
               	<lb n="1"/><persName type="divine" key="demeter"><name><supplied reason="lost">Δ</supplied><unclear>ή</unclear>μητρι</name></persName> 
                                 <persName type="attested" ref="#person1020"><name nymRef="Εὐμένης">Εὐμέ<unclear>ν</unclear><supplied reason="lost">ης</supplied></name></persName>
            </ab>
